<Window x:Class="SolevayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolevayApp"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderBrush="White" BorderThickness="1" HorizontalAlignment="Center" Height="68" Margin="0,-1,0,0" VerticalAlignment="Top" Width="799" Background="#FFE1F0FF">
            <Label Content="Автоматизация рабочего места отдела кадров" HorizontalAlignment="Center" Margin="0,9,0,0" VerticalAlignment="Top" FontSize="24"/>
        </Border>
        <Button Content="Авторизация" HorizontalAlignment="Center" Margin="0,166,0,0" VerticalAlignment="Top" Height="51" Width="262" Background="#FF546B82" Foreground="White" BorderBrush="{x:Null}" Opacity="0.995" FontSize="20" Click="Button_Click"/>
        <Button Content="Регистрация" HorizontalAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top" Height="51" Width="262" Background="#FF546B82" Foreground="White" BorderBrush="{x:Null}" Opacity="0.995" FontSize="20" Click="Button_Click_1"/>
    </Grid>
</Window>
