<Window x:Class="SolevayApp.Windows.AddDateWindowFull"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolevayApp.Windows"
        mc:Ignorable="d"
        Title="Окно выбора даты" Height="251" Width="357">
    <Grid>
        <DatePicker x:Name="dateStart" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" Height="34" Width="203"/>
        <Button Content="Ок" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Width="193" Background="#FF546B82" Foreground="White" BorderBrush="{x:Null}" Opacity="0.995" FontSize="20" Click="Button_Click" Margin="0,155,0,0" />
        <Label Content="Дата начала" HorizontalAlignment="Left" Margin="77,16,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dateEnd" HorizontalAlignment="Center" Margin="0,107,0,0" VerticalAlignment="Top" Height="34" Width="203"/>
        <Label Content="Дата конца" HorizontalAlignment="Left" Margin="77,81,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
